<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mycompany.app.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginView</servlet-name>
        <servlet-class>com.mycompany.app.Views.LoginView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginView</servlet-name>
        <url-pattern>/loginView.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainView</servlet-name>
        <servlet-class>com.mycompany.app.Views.MainView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainView</servlet-name>
        <url-pattern>/mainView.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.mycompany.app.HomeController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsertContactsServlet</servlet-name>
        <servlet-class>com.mycompany.app.InsertContactsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertContactsServlet</servlet-name>
        <url-pattern>/insert.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SelectContactsServlet</servlet-name>
        <servlet-class>com.mycompany.app.SelectContactsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectContactsServlet</servlet-name>
        <url-pattern>/selectAll.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAllContactsServlet</servlet-name>
        <servlet-class>com.mycompany.app.DeleteAllContactsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAllContactsServlet</servlet-name>
        <url-pattern>/deleteAll.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginCheckServlet</servlet-name>
        <servlet-class>com.mycompany.app.LoginCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginCheckServlet</servlet-name>
        <url-pattern>/loginCheck.do</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>com.mycompany.app.Filters.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.mycompany.app.Filters.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>